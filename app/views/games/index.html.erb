<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Winner</th>
      <th>Created</th>
      <th>Last Move</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= did_i_win?(game) ? "WIN" : "LOSE" %></td>
        <td><%= game.created_at.localtime.strftime("%b %d @ %I:%M%p") %></td>
        <td><%= game.updated_at.localtime.strftime("%b %d @ %I:%M%p") %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>
